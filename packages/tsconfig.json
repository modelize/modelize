{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "paths": {
            "@modelize/actions": [
                "modelize-actions/src"
            ],
            "@modelize/actions/*": [
                "modelize-actions/src/*"
            ],
            "@modelize/interop": [
                "modelize-interop/src"
            ],
            "@modelize/interop/*": [
                "modelize-interop/src/*"
            ],
            "@modelize/transfer": [
                "modelize-transfer/src"
            ],
            "@modelize/transfer/*": [
                "modelize-transfer/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
